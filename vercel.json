{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install",
  "outputDirectory": "public",
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "models/**,routes/**,services/**,middleware/**,utils/**,config/**,public/**,asset/**,package.json"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index" },
    { "source": "/auth/:path*", "destination": "/api/index" },
    { "source": "/admin/:path*", "destination": "/api/index" },
    { "source": "/random/:path*", "destination": "/api/index" },
    { "source": "/maker/:path*", "destination": "/api/index" },
    { "source": "/ai/:path*", "destination": "/api/index" },
    { "source": "/sse/:path*", "destination": "/api/index" },
    { "source": "/debug/:path*", "destination": "/api/index" },
    { "source": "/health", "destination": "/api/index" },
    { "source": "/health/:path*", "destination": "/api/index" },
    { "source": "/docs", "destination": "/api/index" }
  ],
  "headers": [
    {
      "source": "/api/:path*",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ],
  "trailingSlash": false,
  "cleanUrls": true
}
