{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "installCommand": "npm install",
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "memory": 1024,
      "includeFiles": "models/**,routes/**,services/**,middleware/**,utils/**,config/**,public/**,asset/**,package.json"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.js" },
    { "source": "/auth/:path*", "destination": "/api/index.js" },
    { "source": "/admin/:path*", "destination": "/api/index.js" },
    { "source": "/random/:path*", "destination": "/api/index.js" },
    { "source": "/maker/:path*", "destination": "/api/index.js" },
    { "source": "/ai/:path*", "destination": "/api/index.js" },
    { "source": "/sse/:path*", "destination": "/api/index.js" },
    { "source": "/debug/:path*", "destination": "/api/index.js" },
    { "source": "/health", "destination": "/api/index.js" },
    { "source": "/health/:path*", "destination": "/api/index.js" },
    { "source": "/docs", "destination": "/api/index.js" },
    { "source": "/favicon.ico", "destination": "/public/favicon.ico" },
    { "source": "/logo.jpg", "destination": "/public/logo.jpg" },
    { "source": "/style.css", "destination": "/public/style.css" },
    { "source": "/script.js", "destination": "/public/script.js" },
    { "source": "/js/:path*", "destination": "/public/js/:path*" },
    { "source": "/asset/:path*", "destination": "/asset/:path*" },
    { "source": "/login.html", "destination": "/public/login.html" },
    { "source": "/signup.html", "destination": "/public/signup.html" },
    { "source": "/admin-panel.html", "destination": "/public/admin-panel.html" },
    { "source": "/admin-users.html", "destination": "/public/admin-users.html" },
    { "source": "/admin-tools.html", "destination": "/public/admin-tools.html" },
    { "source": "/download-tiktok.html", "destination": "/public/download-tiktok.html" },
    { "source": "/index.html", "destination": "/public/index.html" },
    { "source": "/", "destination": "/public/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Max-Age", "value": "86400" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(auth|admin|random|maker|ai|health|debug)/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, PATCH, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    }
  ]
}
