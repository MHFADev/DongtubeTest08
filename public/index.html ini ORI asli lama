<body>
  <div class="container">
    <div class="header">
      <div class="welcome">Hi Visitor! Welcome To</div>
      <div class="title-row">
        <h1 class="main-title">Dongtube APIs.</h1>
        <span class="version-badge">v2.0</span>
      </div>
      <p class="subtitle">This interactive interface allows you to explore and test our comprehensive collection of API endpoints in real-time.</p>
      <div class="links">
  <a class="link-item" href="https://whatsapp.com/channel/0029Vb91qeW17Emm4TVqu53K" target="_blank">
    WhatsApp Information Channel.
  </a>
  <a class="link-item" href="https://wa.me/6283143961588" target="_blank">
    Contact Admin.
  </a>
      </div>
    </div>

    <div class="stats-box">
      <div class="stat-number" id="totalEndpoints">0</div>
      <div class="stat-label">Total Endpoints</div>
    </div>

    <div class="search-box">
      <span class="search-icon">üîç</span>
      <input type="text" id="searchInput" placeholder="Search endpoints...">
    </div>

    <div id="loading" class="loading">
      <div class="spinner"></div>
      <p><strong>Loading endpoints...</strong></p>
    </div>

    <div id="endpointsContainer" class="endpoints-container"></div>

    <div class="footer">
      Thx To All Users And Contributors.<br>
      ¬© Dongtube APIs. | All Rights Reserved.
    </div>
  </div>

  <script>
    const API_BASE = window.location.origin;
    let allEndpoints = [];

    async function loadEndpoints() {
      try {
        const response = await fetch(`${API_BASE}/api/docs`);
        const data = await response.json();
        
        if (data.success) {
          allEndpoints = data.endpoints;
          renderEndpoints(allEndpoints);
          updateStats();
        }
      } catch (error) {
        console.error('Error loading endpoints:', error);
        document.getElementById('loading').innerHTML = '<p style="color: #e74c3c;"><strong>Failed to load endpoints. Please refresh the page.</strong></p>';
      } finally {
        document.getElementById('loading').style.display = 'none';
      }
    }

    function updateStats() {
      document.getElementById('totalEndpoints').textContent = allEndpoints.length;
    }

    function renderEndpoints(endpoints) {
      const container = document.getElementById('endpointsContainer');
      
      if (endpoints.length === 0) {
        container.innerHTML = '<div class="no-results">No endpoints found</div>';
        return;
      }

      container.innerHTML = endpoints.map((ep, idx) => {
        const hasParams = ep.params && ep.params.length > 0;
        const methods = ep.method.split(',').map(m => m.trim());
        const epId = `endpoint-${idx}`;
        
        return `
          <div class="endpoint-card" id="${epId}">
            <div class="endpoint-header" onclick="toggleEndpoint('${epId}')">
              <div class="method-badge">${ep.method}</div>
              <div class="endpoint-info">
                <div class="endpoint-path">${ep.path}</div>
                <div class="endpoint-description">${ep.description || ep.name}</div>
              </div>
              <div class="expand-icon">‚ñº</div>
            </div>
            <div class="endpoint-body">
              <div class="section-title">TRY IT OUT</div>
              
              <div class="method-selector">
                ${methods.map(m => `
                  <div class="method-option ${m === methods[0] ? 'active' : ''}" 
                       onclick="selectMethod('${epId}', '${m}')" 
                       data-method="${m}">
                    ${m}
                  </div>
                `).join('')}
              </div>

              <div class="params-container">
                ${hasParams ? ep.params.map(p => `
                  <div class="param-group">
                    <div class="param-label">
                      ${p.name}
                      ${p.required ? '<span class="required-mark">*</span>' : ''}
                    </div>
                    <div class="param-hint">${p.description || 'Input ' + p.name}</div>
                    <input type="text" 
                           class="param-input" 
                           data-param="${p.name}" 
                           placeholder="${p.placeholder || p.description || p.name}">
                  </div>
                `).join('') : '<p style="font-size: 0.85rem; color: #888; margin-bottom: 15px;">No parameters required</p>'}
              </div>
              
              <button class="execute-btn" onclick="executeEndpoint('${epId}', '${ep.path}', ${ep.responseBinary || false})">
                Execute
              </button>
              
              <div class="result-section" id="result-${epId}">
                <div class="result-header">RESPONSE</div>
                <div class="result-box" id="result-content-${epId}"></div>
              </div>
              
              <div class="status-codes">
                <div class="codes-title">HTTP STATUS CODES</div>
                <table class="status-table">
                  <thead>
                    <tr>
                      <th>Code</th>
                      <th>Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>
                        <div class="status-code">
                          <span class="status-icon success">‚úì</span>
                          <span>200</span>
                        </div>
                      </td>
                      <td>OK - Request successful</td>
                    </tr>
                    <tr>
                      <td>
                        <div class="status-code">
                          <span class="status-icon error">‚úï</span>
                          <span>400</span>
                        </div>
                      </td>
                      <td>Bad Request - Invalid parameters or missing required fields</td>
                    </tr>
                    <tr>
                      <td>
                        <div class="status-code">
                          <span class="status-icon error">‚úï</span>
                          <span>405</span>
                        </div>
                      </td>
                      <td>Method Not Allowed - HTTP method not supported</td>
                    </tr>
                    <tr>
                      <td>
                        <div class="status-code">
                          <span class="status-icon error">‚úï</span>
                          <span>500</span>
                        </div>
                      </td>
                      <td>Internal Server Error - Something went wrong</td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        `;
      }).join('');
    }

    function toggleEndpoint(id) {
      const card = document.getElementById(id);
      const wasExpanded = card.classList.contains('expanded');
      
      // Close all cards
      document.querySelectorAll('.endpoint-card').forEach(c => {
        c.classList.remove('expanded');
      });
      
      // Open clicked card if it wasn't expanded
      if (!wasExpanded) {
        card.classList.add('expanded');
      }
    }

    function selectMethod(epId, method) {
      const card = document.getElementById(epId);
      const options = card.querySelectorAll('.method-option');
      
      options.forEach(opt => {
        if (opt.dataset.method === method) {
          opt.classList.add('active');
        } else {
          opt.classList.remove('active');
        }
      });
    }

    async function executeEndpoint(epId, path, isBinary) {
      const card = document.getElementById(epId);
      const resultSection = document.getElementById(`result-${epId}`);
      const resultContent = document.getElementById(`result-content-${epId}`);
      
      // Get selected method
      const activeMethod = card.querySelector('.method-option.active');
      const method = activeMethod ? activeMethod.dataset.method : 'GET';
      
      // Collect parameters
      const params = {};
      card.querySelectorAll('input[data-param]').forEach(input => {
        if (input.value.trim()) {
          params[input.dataset.param] = input.value.trim();
        }
      });

      let url = `${API_BASE}${path}`;
      
      // Add cache buster for binary/random endpoints
      if (isBinary || path.includes('/random/')) {
        const separator = url.includes('?') ? '&' : '?';
        url += `${separator}_t=${Date.now()}`;
      }
      
      // Add params to URL for GET requests
      if (method === 'GET' && Object.keys(params).length > 0) {
        const separator = url.includes('?') ? '&' : '?';
        url += `${separator}${new URLSearchParams(params).toString()}`;
      }

      resultSection.classList.add('show');
      resultContent.innerHTML = '<div class="loading"><div class="spinner"></div><p><strong>Loading...</strong></p></div>';

      try {
        const options = { 
          method: method,
          headers: {},
          cache: 'no-store'
        };
        
        // Add body for non-GET requests
        if (method !== 'GET' && Object.keys(params).length > 0) {
          options.headers['Content-Type'] = 'application/json';
          options.body = JSON.stringify(params);
        }

        const response = await fetch(url, options);
        const contentType = response.headers.get('content-type');

        // Handle binary responses (images/videos)
        if (isBinary || (contentType && contentType.includes('image'))) {
          const blob = await response.blob();
          const imgUrl = URL.createObjectURL(blob);
          resultContent.innerHTML = `
            <div class="result-meta">
              <strong>Method:</strong> ${method}<br>
              <strong>URL:</strong> ${url}<br>
              <strong>Status:</strong> ${response.status} ${response.statusText}<br>
              <strong>Content-Type:</strong> ${contentType}
            </div>
            <img src="${imgUrl}" alt="Response Image" onload="URL.revokeObjectURL(this.src)">
          `;
        } else if (contentType && contentType.includes('video')) {
          const blob = await response.blob();
          const videoUrl = URL.createObjectURL(blob);
          resultContent.innerHTML = `
            <div class="result-meta">
              <strong>Method:</strong> ${method}<br>
              <strong>URL:</strong> ${url}<br>
              <strong>Status:</strong> ${response.status} ${response.statusText}<br>
              <strong>Content-Type:</strong> ${contentType}
            </div>
            <video controls><source src="${videoUrl}" type="${contentType}"></video>
          `;
        } else {
          // Handle JSON responses
          const data = await response.json();
          resultContent.innerHTML = `
            <div class="result-meta">
              <strong>Method:</strong> ${method}<br>
              <strong>URL:</strong> ${url}<br>
              <strong>Status:</strong> ${response.status} ${response.statusText}<br>
              <strong>Content-Type:</strong> ${contentType || 'application/json'}
            </div>
            <pre>${JSON.stringify(data, null, 2)}</pre>
          `;
        }
      } catch (error) {
        resultContent.innerHTML = `
          <div class="result-meta"><strong>ERROR</strong></div>
          <pre>${error.message}</pre>
        `;
      }
    }

    // Search functionality
    document.getElementById('searchInput').addEventListener('input', (e) => {
      const query = e.target.value.toLowerCase();
      const filtered = allEndpoints.filter(ep => 
        ep.name.toLowerCase().includes(query) ||
        ep.path.toLowerCase().includes(query) ||
        (ep.description && ep.description.toLowerCase().includes(query)) ||
        (ep.category && ep.category.toLowerCase().includes(query))
      );
      renderEndpoints(filtered);
    });

    // Load endpoints on page load
    loadEndpoints();
  </script>
</body>
</html>